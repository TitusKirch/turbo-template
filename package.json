{
  "name": "@tituskirch/turbo-template",
  "description": "A repository template for my Turborepo repositories.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format:fix": "npx prettier --write \"./**/*.{js,ts,tsx,vue,css}\"",
    "format": "npx prettier --check \"./**/*.{js,ts,tsx,vue,css}\"",
    "lint:fix": "eslint --fix apps packages services --max-warnings=0",
    "lint": "eslint . --max-warnings=0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "prettier": "^3.0.3",
    "@tituskirch/turbo-template-tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0"
}
